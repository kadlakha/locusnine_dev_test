<style>
  .table>tbody>tr>td {
    padding-top: 15px;
    padding-bottom: 15px;
  }

  .table>thead>tr>th {
    padding-top: 15px;
    padding-bottom: 15px;
  }

  table {
    display: flex;
    flex-flow: column;
    width: 100%;
  }

  thead {
    flex: 0 0 auto;
  }

  tbody {
    flex: 1 1 auto;
    display: block;
    overflow-y: auto;
    overflow-x: hidden;
  }

  tr {
    width: 100%;
    display: table;
    table-layout: fixed;
  }
</style>
<hr style="margin-bottom: 0px;" />
<div class="table-responsive">
<table class="table table-striped table-hover" style="height: 100%;">
  <thead>
    <tr>
      <th scope="col">NAME</th>
      <th scope="col">EMAIL</th>
      <th scope="col">ROLE TYPE</th>
      <th scope="col">STATUS</th>
      <th scope="col" style="width: auto;"></th>
    </tr>
  </thead>
  <tbody>

    <%
            for (var i = 0; i < data.results.length; i++) {
            %>
    <tr>
      <td><%= data.results[i].name %></td>
      <td><%= data.results[i].email %></td>
      <td><%= data.results[i].role %></td>
      <td>
        <div style="display: flex; align-items: center;">
          <% switch (data.results[i].status) {
                case 'Active' : %>
          <img src="/images/ico_active.svg" alt="Active">
          <% break;
                
                case 'Pending' : %>
          <img src="/images/ico_pending.svg" alt="Pending">
          <% break;
                
                case 'Inactive' : %>
          <img src="/images/ico_inactive.svg" alt="Inactive">
          <% break;
                } %>
          <span style="">&nbsp;<%= data.results[i].status %></span>
        </div>
      </td>
      <td style="float: right; padding-right: 2vw"><img src="/images/ico_edit.svg" alt="Edit" onclick="editUser(<%= data.results[i].id%>)"></td>
    </tr>
    <%}%>
      
      
    </tbody>
  </table>
</div>